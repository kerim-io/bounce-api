{
  "name": "bitbasel-mediasoup-server",
  "version": "1.0.0",
  "description": "mediasoup-based WebRTC media server for BitBasel livestreaming",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
    "clean": "rm -rf dist"
  },
